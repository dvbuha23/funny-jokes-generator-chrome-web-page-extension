{
  "manifest_version": 3,
  "name": "AutoFunny Jokes Generator",
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": ["storage"],
  "background": {
    "service_worker": "main.js"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["main.js", "styles.css"],
      "matches": ["<all_urls>"]
    }
  ]
}